{
    "manifest_version": 3,
    "name": "Clipboard",
    "version": "1.0",
    "description": "Historique intelligent du presse-papier.",
    "permissions": [
        "storage",
        "contextMenus",
        "scripting",
        "clipboardWrite"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "commands": {
        "save-selection": {
            "suggested_key": {
                "default": "Ctrl+C"
            },
            "description": "Sauvegarder la s√©lection dans le clipboard"
        }
    }
}